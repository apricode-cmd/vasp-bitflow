// ==========================================
// PAYMENT METHODS
// ==========================================

// Payment Method Direction
enum PaymentDirection {
  IN   // Только входящие (клиент → платформа)
  OUT  // Только исходящие (платформа → клиент)
  BOTH // Оба направления
}

// Payment Provider Type
enum ProviderType {
  MANUAL         // Ручная обработка (админ проверяет вручную)
  BANK_ACCOUNT   // Привязан к банковскому счёту
  PSP            // Через платёжный провайдер (Stripe, TPay)
  CRYPTO_WALLET  // Криптовалютный кошелёк
}

// Automation Level
enum AutomationLevel {
  MANUAL      // Полностью вручную (админ всё делает)
  SEMI_AUTO   // Полуавтомат (админ подтверждает)
  FULLY_AUTO  // Полный автомат (система сама обрабатывает)
}

// Payment Methods - способы оплаты (REFACTORED v2)
model PaymentMethod {
  code           String           @id @unique // sepa, swift, card_eur, blik, crypto_btc
  name           String // "SEPA Transfer (EUR)", "Visa/Mastercard", "Bitcoin Network"
  description    String?          @db.Text // Подробное описание
  
  // Classification
  type           String // bank_transfer, card_payment, instant, crypto_transfer
  direction      PaymentDirection @default(IN) // IN, OUT, BOTH
  providerType   ProviderType     @default(MANUAL)
  automationLevel AutomationLevel @default(MANUAL)
  
  // Payment Details
  currency       String // EUR, PLN (для фиата)
  supportedNetworks String[] @default([]) // Для крипты: ["ETHEREUM", "BSC", "POLYGON"]
  
  // Provider Connection (NEW: unified approach)
  pspConnector     String? // stripe, tpay, revolut (если через PSP)
  paymentAccountId String? // Связь с PaymentAccount (банк или крипто кошелёк)
  
  // DEPRECATED: старые поля (keep for backward compatibility)
  bankAccountId  String? // DEPRECATED: use paymentAccountId instead
  
  // Limits & Fees
  minAmount      Float?
  maxAmount      Float?
  feeFixed       Float    @default(0)
  feePercent     Float    @default(0)
  processingTime String? // "Instant", "1-3 business days"
  
  // UI & Instructions
  instructions   String?  @db.Text // Инструкции для пользователя
  iconUrl        String? // Иконка метода оплаты
  priority       Int      @default(0) // Порядок отображения
  
  // Config & Status
  config         Json? // Дополнительные настройки (API ключи, webhook URLs)
  isActive       Boolean  @default(true)
  isAvailableForClients Boolean @default(true) // Показывать клиентам?
  
  // Metadata
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String? // Admin user ID
  
  // Relations
  fiatCurrency   FiatCurrency?   @relation(fields: [currency], references: [code])
  psp            PspConnector?   @relation(fields: [pspConnector], references: [code])
  paymentAccount PaymentAccount? @relation(fields: [paymentAccountId], references: [id])
  
  // DEPRECATED relations
  bankAccount  BankDetails?   @relation(fields: [bankAccountId], references: [id])
  
  orders       Order[]
  limitsMatrix LimitsMatrix[]
  payIns       PayIn[] // Входящие платежи через этот метод
  payOuts      PayOut[] @relation("PayOutMethod") // Исходящие платежи через этот метод

  @@index([type, isActive])
  @@index([currency])
  @@index([direction])
  @@index([providerType])
  @@index([automationLevel])
  @@index([isAvailableForClients])
}

