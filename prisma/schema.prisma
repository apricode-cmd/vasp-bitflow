// ==========================================
// PAYMENT ACCOUNTS (UNIFIED)
// ==========================================

// Payment Account Type
enum PaymentAccountType {
  BANK_ACCOUNT   // Банковский счёт (фиат)
  CRYPTO_WALLET  // Криптовалютный кошелёк
}

// Payment Accounts - универсальная модель для банковских счетов и крипто-кошельков
model PaymentAccount {
  id          String             @id @default(cuid())
  code        String             @unique // sepa_eur_main, btc_hot_wallet
  name        String // "Main EUR SEPA Account", "BTC Hot Wallet"
  type        PaymentAccountType
  description String?            @db.Text
  
  // For BANK_ACCOUNT (фиат)
  currency          String? // EUR, PLN (для фиата)
  bankName          String?
  bankAddress       String?
  accountHolder     String?
  iban              String?
  swift             String?
  bic               String?
  sortCode          String? // Для UK банков
  referenceTemplate String? // "APR-{orderId}"
  
  // For CRYPTO_WALLET (крипто)
  cryptocurrencyCode String? // BTC, ETH, USDT
  blockchainCode     String? // BITCOIN, ETHEREUM, BSC
  address            String? // Wallet address
  
  // Common fields
  balance        Float?   // Текущий баланс (опционально)
  minBalance     Float? // Минимальный баланс для оповещений
  instructions   String?  @db.Text // Инструкции для использования
  isActive       Boolean  @default(true)
  isDefault      Boolean  @default(false) // Использовать по умолчанию
  priority       Int      @default(0)
  
  // Security & Monitoring
  lastUsed       DateTime?
  lastChecked    DateTime? // Последняя проверка баланса
  alertsEnabled  Boolean   @default(true)
  
  // Metadata
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String? // Admin user ID
  
  // Relations
  fiatCurrency   FiatCurrency?      @relation(fields: [currency], references: [code])
  cryptocurrency Currency?          @relation("PaymentAccountCrypto", fields: [cryptocurrencyCode], references: [code])
  blockchain     BlockchainNetwork? @relation(fields: [blockchainCode], references: [code])
  
  // Payment methods using this account
  paymentMethods PaymentMethod[]
  payOuts        PayOut[]           @relation("PaymentAccountPayOuts")
  
  @@index([type, isActive])
  @@index([currency])
  @@index([cryptocurrencyCode])
  @@index([isDefault])
}

// DEPRECATED: Keep for migration compatibility, will be removed
model BankDetails {
  id                String   @id @default(cuid())
  currency          String
  bankName          String
  bankAddress       String?
  accountHolder     String
  iban              String
  swift             String?
  bic               String?
  sortCode          String?
  referenceTemplate String   @default("APR-{orderId}")
  instructions      String?  @db.Text
  isActive          Boolean  @default(true)
  priority          Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  fiatCurrency   FiatCurrency @relation(fields: [currency], references: [code])
  paymentMethods PaymentMethod[] // DEPRECATED

  @@index([currency, isActive])
