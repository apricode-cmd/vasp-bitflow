# Production Environment Configuration - Supabase

# Database (Supabase - Connection Pooling for Prisma)
# Use port 6543 for connection pooling with pgbouncer
DATABASE_URL="postgres://postgres.[project-ref]:[password]@aws-1-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct connection (for migrations) - Use port 5432
DIRECT_URL="postgres://postgres.[project-ref]:[password]@aws-1-eu-central-1.pooler.supabase.com:5432/postgres"

# NextAuth
NEXTAUTH_URL="https://bitflow.apricode.com"
NEXTAUTH_SECRET="<generate-with-openssl-rand-base64-32>"

# Storage (Vercel Blob for production)
STORAGE_PROVIDER="vercel-blob"
BLOB_READ_WRITE_TOKEN="<auto-added-by-vercel>"

# KYC (KYCAID)
KYCAID_API_URL="https://api.kycaid.com"
KYCAID_API_KEY="<your-kycaid-api-key>"
KYCAID_FORM_ID="<your-kycaid-form-id>"
KYCAID_WEBHOOK_SECRET="<your-kycaid-webhook-secret>"

# Email (Resend)
RESEND_API_KEY="<your-resend-api-key>"
RESEND_FROM_EMAIL="noreply@bitflow.com"

# CoinGecko (Pro recommended for production)
COINGECKO_API_KEY="<your-coingecko-api-key>"

# Admin
ADMIN_EMAIL="admin@bitflow.com"
ADMIN_PASSWORD="<strong-password-min-12-chars>"

# Feature Flags
ENABLE_KYC="true"
ENABLE_PUBLIC_API="true"

# Node Environment
NODE_ENV="production"

# Supabase (optional - for direct Supabase SDK usage)
SUPABASE_URL="https://[project-ref].supabase.co"
SUPABASE_ANON_KEY="<your-supabase-anon-key>"
SUPABASE_SERVICE_ROLE_KEY="<your-supabase-service-role-key>"
