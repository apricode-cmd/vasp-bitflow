  {
    "key": "PAYMENT_RECEIVED",
    "name": "Payment Received",
    "description": "Payment confirmation email",
    "category": "TRANSACTIONAL",
    "subject": "Payment Received - Order #{{orderId}} - {{brandName}}",
    "preheader": "We have received your payment and are processing your order",
    "layout": "default",
    "variables": ["orderId", "amount", "currency", "userName", "orderUrl", "brandName", "brandLogo", "primaryColor", "supportEmail", "supportPhone"],
    "bodyContent": "<h1 style=\"font-size: 28px; font-weight: 700; text-align: center; margin: 0 0 16px 0; color: #1F2937;\">üí≥ Payment Received</h1><p style=\"color: #6B7280; font-size: 16px; text-align: center; line-height: 1.6; margin: 0 0 32px 0;\">Hi {{userName}}, we have received your payment!</p><div style=\"background: #F9FAFB; border-radius: 12px; padding: 24px; margin: 24px 0;\"><h3 style=\"margin: 0 0 16px 0; font-size: 18px; color: #1F2937; font-weight: 600;\">Payment Details</h3><table style=\"width: 100%; border-collapse: collapse;\"><tr><td style=\"padding: 8px 0; color: #6B7280; font-size: 14px;\">Order ID</td><td style=\"padding: 8px 0; text-align: right; font-weight: 600; color: #1F2937;\">#{{orderId}}</td></tr><tr style=\"border-top: 2px solid #E5E7EB;\"><td style=\"padding: 12px 0 0 0; color: #1F2937; font-weight: 600; font-size: 16px;\">Amount Paid</td><td style=\"padding: 12px 0 0 0; text-align: right; font-weight: 700; color: #10B981; font-size: 20px;\">{{amount}} {{currency}}</td></tr></table></div><div style=\"background: #ECFDF5; border-left: 4px solid #10B981; border-radius: 8px; padding: 20px; margin: 24px 0;\"><h3 style=\"margin: 0 0 12px 0; color: #065F46; font-size: 16px; font-weight: 600;\">‚úÖ What is Next?</h3><p style=\"margin: 0 0 8px 0; color: #065F46; font-size: 14px;\">Your order is now being processed.</p><p style=\"margin: 0; color: #065F46; font-size: 14px;\">We will send you another email once your cryptocurrency has been sent to your wallet.</p></div><div style=\"text-align: center; margin: 32px 0;\"><a href=\"{{orderUrl}}\" style=\"display: inline-block; background: linear-gradient(135deg, #06B6D4 0%, #0891B2 100%); color: white; text-decoration: none; padding: 14px 32px; border-radius: 8px; font-weight: 600; font-size: 16px;\">Track Your Order</a></div>"
  },
  {
    "key": "KYC_REJECTED",
    "name": "KYC Rejected",
    "description": "KYC verification rejection notification",
    "category": "COMPLIANCE",
